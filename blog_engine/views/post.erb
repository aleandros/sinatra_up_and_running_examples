<article>
    <header>
        <h1><a href="<%= url(article.slug) %>"><%= article.title %></a></h1>
    </header>
    <time class="timeago" datetime="<%= article.date.xmlschema %>">
        <%= article.date.strftime "%Y/%m/%d" %>
    </time>
    <section class="content">
        <%= markdown article.content %>
    </section>
</article>
